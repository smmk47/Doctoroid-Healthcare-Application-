<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/curved_square_3"


    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Doctoroid"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sidebarpic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/person_3"
        />

    <TextView
        android:id="@+id/sidebarname"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saad Salman"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/sidebaremail"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saadsalman@nu.edu.pk"
        android:layout_marginTop="20dp"
        android:textColor="#727070"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/chatbtn"
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chat">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/searchbtn"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:background="@drawable/search">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/emergency"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:background="@drawable/hospital">
        </Button>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Emergency Service"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/customer"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:background="@drawable/person_1">
        </Button>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:background="@drawable/curved_square_3"
        android:backgroundTint="#4AABE2"
        />




</LinearLayout>
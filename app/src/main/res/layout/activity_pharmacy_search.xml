<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80C0DD"
    android:padding="16dp">

    <!-- Medication Input Fields -->
    <EditText
        android:id="@+id/medicineEditText"
        android:layout_width="376dp"
        android:layout_height="62dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/curved_square_4"
        android:hint="Enter Medicine Name" />

    <!-- Button to trigger search -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicineEditText"
        android:layout_marginTop="79dp"
        android:backgroundTint="#70C8EF"
        android:text="Search" />

    <!-- Response TextView -->
    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginTop="80dp"
        android:background="@drawable/curved_square_3"
        android:padding="16dp"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
